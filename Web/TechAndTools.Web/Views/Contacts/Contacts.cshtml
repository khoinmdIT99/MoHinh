@model TechAndTools.Web.InputModels.Contacts.CreateContactInputModel

@{
    ViewData["Title"] = "Contacts";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/css/contact_styles.css">
}

<div class="contact_info">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="contact_info_container d-flex flex-lg-row flex-column justify-content-between align-items-between">

                    <!-- Contact Item -->
                    <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                        <div class="contact_info_image"><img src="~/images/contact_1.png" alt=""></div>
                        <div class="contact_info_content">
                            <div class="contact_info_title"> Телефон</div>
                            <div class="contact_info_text">+38 068 005 3570</div>
                        </div>
                    </div>

                    <!-- Contact Item -->
                    <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                        <div class="contact_info_image"><img src="~/images/contact_2.png" alt=""></div>
                        <div class="contact_info_content">
                            <div class="contact_info_title">E-mail</div>
                            <div class="contact_info_text"> TechAndToolsBg@gmail.com</div>
                        </div>
                    </div>

                    <!-- Contact Item -->
                    <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                        <div class="contact_info_image"><img src="~/images/contact_3.png" alt=""></div>
                        <div class="contact_info_content">
                            <div class="contact_info_title"> Адрес</div>
                            <div class="contact_info_text">403 Владиславово, Варна, България</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Form -->

<div class="contact_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="contact_form_container">
                    <div class="contact_form_title"> Пишете ни</div>

                    <form method="post" asp-controller="Contacts" asp-action="SendContact" id="contact_form">
                        <div class="contact_form_inputs d-flex flex-md-row flex-column justify-content-between align-items-between">
                            <input asp-for="@Model.FullName" type="text" id="contact_form_name" class="contact_form_name input_field" placeholder="Име..." required="required" data-error="Name is required.">

                            <input asp-for="Email" type="text" id="contact_form_email" class="contact_form_email input_field" placeholder="Е-mail..." required="required" data-error="Email is required.">
                            <input asp-for="Phone" type="text" id="contact_form_phone" class="contact_form_phone input_field" placeholder="Телефон...">
                        </div>
                        <div class="contact_form_text">
                            <textarea asp-for="Message" id="contact_form_message" class="text_field contact_form_message" name="message" rows="4" placeholder="Съобщение..." required="required" data-error="Please, write us a message."></textarea>
                        </div>
                        <div class="contact_form_button">
                            <button type="submit" class="button contact_submit_button"> Изпрати</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="panel"></div>
</div>

@section Scripts
{
    <script src="~/js/contact_custom.js"></script>
}
