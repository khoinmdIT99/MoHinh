@model IEnumerable<TechAndTools.Web.ViewModels.Orders.MyOrdersViewModel>

@{
    ViewData["Title"] = "My";
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-1 d-flex justify-content-center"> #</th>
                <th scope="col" class="col-1 d-flex justify-content-center"> Доставка</th>
                <th scope="col" class="col-2 d-flex justify-content-center"> Статус на поръчка</th>
                <th scope="col" class="col-2 d-flex justify-content-center"> Тип на плащане</th>
                <th scope="col" class="col-2 d-flex justify-content-center"> Цена</th>
                <th scope="col" class="col-2 d-flex justify-content-center"> Статус на плащане</th>
                <th scope="col" class="col-2 d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr class="row">
                <td class="col-1 d-flex justify-content-center">
                    @order.Id
                </td>
                <td class="col-1 d-flex justify-content-center">
                    @order.ExpectedDeliveryDate.ToString("dd/MM/yyyy")
                </td>
                <td class="col-2 d-flex justify-content-center">
                    @order.OrderStatusName
                </td>
                <td class="col-2 d-flex justify-content-center">
                    @order.PaymentMethodName
                </td>
                <td class="col-2 d-flex justify-content-center">
                    @order.TotalPrice лв.
                </td>
                <td class="col-2 d-flex justify-content-center">
                    @order.PaymentStatusName
                </td>
                <td class="col-md-2 d-flex justify-content-around">
                    <div class="mr-2">
                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm"> Детайли</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>