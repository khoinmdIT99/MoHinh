@model TechAndTools.Web.ViewModels.Orders.CompleteOrderViewModel

@{
    ViewData["Title"] = "Complete";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/css/cart_styles.css">
}

<div class="container">
    <div class="jumbotron text-center"> <h3>Поръчката ви беше приета.</h3> </div>
    
    <div class="d-flex justify-content-around">
        <div>
            <a class="button cart_button_clear" href="/"> Продължи с пазаруването</a>
        </div>
        <div>
            <a class="button cart_button_checkout" asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId"> Детайли на поръчката</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cart_custom.js"></script>
}
