@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}
<partial name="_StatusMessage" for="StatusMessage" />

<div class="d-flex justify-content-center">
    <form id="change-password-form" class="col-md-4" method="post">
        <div class="form-group">
            <span>Old Password</span>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            <input asp-for="Input.OldPassword" type="password" class="form-control"/>
        </div>
        <div class="form-group">
            <span>New Password</span>
            <span asp-validation-for="Input" class="text-danger"></span>
            <input asp-for="Input" type="password" class="form-control"/>
        </div>
        <div class="form-group">
            <span>Confirm New Password</span>
            <span asp-validation-for="Input" class="text-danger"></span>
            <input asp-for="Input" type="password" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Update password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
