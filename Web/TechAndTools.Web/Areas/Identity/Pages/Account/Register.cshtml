@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="mx-auto modal-dialog text-center">
    <div class="modal-content">
        <div class="modal-heading mt-3">
            <div class="row d-flex justify-content-around">
                <div class="col-sm-5 col-xs-5">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><h4> Вход</h4></a>
                </div>
                <div class="col-sm-7 col-xs-7" >
                    <h4> Регистрация</h4>
                </div>
            </div>
        </div>
        <div class="container mb-2">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div class="form-group">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                    <input asp-for="Input.Username" class="form-control" type="text" placeholder="Потребителско име" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    <input asp-for="Input.FirstName" class="form-control" type="text" placeholder="Име"/>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    <input asp-for="Input.LastName" class="form-control" type="text" placeholder="Фамилия"/>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Email"/>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Парола"/>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Повтори паролата"/>
                </div>
                <button type="submit" class="btn btn-primary"> Регистрация</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
