@model IEnumerable<ContactViewModel>

<div class="container">
    <div class="h3 text-center text-primary mt-3">Контакти</div>
    <div class="shadow pr-4 pl-4 pb-4 mb-4">
        <div class="row">
            <div class="col-md-12">
                <hr />
                <div class="d-flex justify-content-between">
                    @foreach (var contact in Model)
                    {
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label asp-for="@contact.FullName">Име:</label>
                                        <input asp-for="@contact.FullName" class="form-control" disabled placeholder="Име" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="@contact.Email">Email:</label>
                                        <input type="email" asp-for="@contact.Email" class="form-control" disabled placeholder="Email" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <label asp-for="@contact.Message">Съдържание:</label>
                                <textarea asp-for="@contact.Message" class="form-control" disabled>@contact.Message</textarea>
                            </div>
                            <div class="row mb-3 pt-0">
                            </div>
                            <div class="d-flex justify-content-around">
                                <div>
                                    <a class="btn btn-outline-primary" asp-controller="Contacts" asp-action="Archive" asp-route-id="@contact.Id"> Архивирай</a>
                                </div>
                                <div>
                                    <a href="mailto:@contact.Email?subject=Re: @contact.FullName&body=%0D%0A%0D%0ARe: @contact.Message" class="btn btn-outline-secondary"> Отговори</a>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                </div>
            </div>
        </div>
    </div>
</div>