@using TechAndTools.Web.ViewModels.MainCategories
@model TechAndTools.Web.InputModels.Categories.CategoryEditInputModel

@{
    ViewData["Title"] = "Промени Категория";
}

<div class="container">
    <hr />
    <div class="text-center text-primary" style="text-transform: uppercase">
        <h3>@ViewData["Title"]</h3>
    </div>
    <hr />
    <div class="d-flex justify-content-around">
        <form class="rounded p-3 w-50 mx-auto mt-3" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ml-2">
                <label asp-for="Name" class="control-label h6"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainCategoryId" class="control-label h6 ml-2"></label>
                <select class="form-control ml-2" id="type" asp-for="MainCategoryId">
                    <option selected disabled>--- Select Main Category ---</option>
                    @foreach (var mainCategory in (IEnumerable<CreateCategoryMainCategoryViewModel>)this.ViewData["mainCategories"])
                    {
                        <option value="@mainCategory.Id">@mainCategory.Name</option>
                    }
                </select>
                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Запази" class="btn btn-outline-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
